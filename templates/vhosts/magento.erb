# Magento Vars
<% if @mage_root -%>
set $MAGE_ROOT <%= @mage_root %>;
root $MAGE_ROOT/pub;
<% else -%>
set $MAGE_ROOT <%= @www_root %>;
<% end -%>

<% if @mage_mode -%>
set $MAGE_MODE <%= @mage_mode %>;
<% end %>

index index.php;
autoindex off;
charset UTF-8;
error_page 404 403 = /errors/404.php;
  #add_header "X-UA-Compatible" "IE=Edge";

# Deny access to sensitive files
location /.user.ini {
   deny all;
}

# PHP entry point for setup application
location ~* ^/setup($|/) {
  deny all;

  root $MAGE_ROOT;
  location ~ ^/setup/index.php {
    fastcgi_pass   <%= @fastcgi %>;

    fastcgi_param  PHP_FLAG  "session.auto_start=off \n suhosin.session.cryptua=off";
    fastcgi_param  PHP_VALUE "memory_limit=768M \n max_execution_time=600";
    fastcgi_read_timeout 600s;
    fastcgi_connect_timeout 600s;

    fastcgi_index  index.php;
    fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
    include fastcgi_params;
  }

  location ~ ^/setup/(?!pub/). {
    deny all;
  }

  location ~ ^/setup/pub/ {
    add_header X-Frame-Options "SAMEORIGIN";
  }
}

# PHP entry point for update application
location ~* ^/update($|/) {
  deny all;

  root $MAGE_ROOT;

  location ~ ^/update/index.php {
    fastcgi_split_path_info ^(/update/index.php)(/.+)$;
    fastcgi_pass   <%= @fastcgi %>;
    fastcgi_index  index.php;
    fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
    fastcgi_param  PATH_INFO        $fastcgi_path_info;
    include        fastcgi_params;
  }

    # Deny everything but index.php
    location ~ ^/update/(?!pub/). {
        deny all;
    }

    location ~ ^/update/pub/ {
        add_header X-Frame-Options "SAMEORIGIN";
    }
  }

  location / {
    try_files $uri $uri/ /index.php$is_args$args;
  }

  location /pub/ {
    location ~ ^/pub/media/(downloadable|customer|import|theme_customization/.*\.xml) {
        deny all;
    }
    alias $MAGE_ROOT/pub/;
    add_header X-Frame-Options "SAMEORIGIN";
  }

  location /static/ {
      if ($MAGE_MODE = "production") {
        expires max;
      }
      # Remove signature of the static files that is used to overcome the browser cache
      location ~ ^/static/version {
        rewrite ^/static/(version\d*/)?(.*)$ /static/$2 last;
      }

      location ~* \.(ico|jpg|jpeg|png|gif|svg|js|css|swf|eot|ttf|otf|woff|woff2|json)$ {
        add_header Cache-Control "public";
        add_header X-Frame-Options "SAMEORIGIN";
        expires +1y;
        access_log off;

        if (!-f $request_filename) {
          rewrite ^/static/(version\d*/)?(.*)$ /static.php?resource=$2 last;
        }
      }
      location ~* \.(zip|gz|gzip|bz2|csv|xml)$ {
        add_header Cache-Control "no-store";
        add_header X-Frame-Options "SAMEORIGIN";
        expires    off;

        if (!-f $request_filename) {
            rewrite ^/static/(version\d*/)?(.*)$ /static.php?resource=$2 last;
        }
      }
      if (!-f $request_filename) {
        rewrite ^/static/(version\d*/)?(.*)$ /static.php?resource=$2 last;
      }
      add_header X-Frame-Options "SAMEORIGIN";
  }

  location /media/ {
      try_files $uri $uri/ /get.php$is_args$args;

      location ~ ^/media/theme_customization/.*\.xml {
          deny all;
      }

      location ~* \.(ico|jpg|jpeg|png|gif|svg|js|css|swf|eot|ttf|otf|woff|woff2)$ {
          add_header Cache-Control "public";
          add_header X-Frame-Options "SAMEORIGIN";
          expires +1y;
          access_log off;
          try_files $uri $uri/ /get.php$is_args$args;
      }
      location ~* \.(zip|gz|gzip|bz2|csv|xml)$ {
          add_header Cache-Control "no-store";
          add_header X-Frame-Options "SAMEORIGIN";
          expires    off;
          try_files $uri $uri/ /get.php$is_args$args;
      }
      add_header X-Frame-Options "SAMEORIGIN";
  }

  location /media/customer/ {
      deny all;
  }

  location /media/downloadable/ {
      deny all;
  }

  location /media/import/ {
      deny all;
  }

  location /errors/ {
      location ~* \.xml$ {
          deny all;
      }
  }

  # Site Scripts
  location /utilities/ {
    allow          84.92.87.185; # Jon Home
    deny all;

    location ~ ^/utilities/loadtesting/.*\.php$ {
      try_files $uri =404;
      expires        off;
      fastcgi_pass   <%= @fastcgi %>;
      fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
      include        fastcgi_params;
    }
    location ~ ^/utilities/php/.*\.php$ {
      try_files $uri =404;
      expires        off;
      fastcgi_pass   <%= @fastcgi %>;
      fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
      include        fastcgi_params;
    }
  }

  # PHP entry point for main application
  location ~ ^/(index|get|static|errors/report|errors/404|errors/503|health_check)\.php$ {
      try_files $uri =404;
      fastcgi_pass   <%= @fastcgi %>;
      #fastcgi_buffers 1024 4k;

       #Â keep alive
      fastcgi_keep_conn on;

      fastcgi_param  PHP_FLAG  "session.auto_start=off \n suhosin.session.cryptua=off";
      fastcgi_param  PHP_VALUE "memory_limit=768M \n max_execution_time=18000";
      fastcgi_read_timeout 600s;
      fastcgi_connect_timeout 600s;

      <% if @mage_mode -%>
        # fastcgi_param MAGE_MODE <%= @mage_mode %>;
      <% end -%>
      <% if @mage_run_code -%>
      fastcgi_param MAGE_RUN_CODE  <%= @mage_run_code %>;
      <% end -%>
      <% if @mage_run_type -%>
      fastcgi_param MAGE_RUN_TYPE  <%= @mage_run_type %>;
      <% end -%>

      fastcgi_index  index.php;
      fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
      <% if @fastcgi_param_https -%>
      fastcgi_param HTTPS  <%= @fastcgi_param_https %>;
      <% end -%>

      include        <%= @fastcgi_params %>;
  }

  location ~ cron\.php {
    deny all;
  }

  # Deny access to composer configuration
  location /composer.lock {
    return 404;
  }

  location /composer.json {
    return 404;
  }

  location /auth.json {
    return 404;
  }

  location /Gemfile {
    return 404;
  }

  # Hidden Files
  location  /. {
    return 404;
  }

  # Displays FPM Status
  location /fpm_status {
    fastcgi_pass   <%= @fastcgi %>;
    fastcgi_index  index.php;
    fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
    include        <%= @fastcgi_params %>;
    allow 84.92.87.185; # Jon Home
    deny  all;
  }

  # Displays Nginx Status
  location /nginx_status {
    stub_status on;
    access_log  off;
    allow 84.92.87.185; # Jon Home
    deny  all;
  }

  # Apple Pay authentication
  location ^~ /.well-known/apple-developer-merchantid-domain-association.txt {
    default_type "text/plain";
  }

  # COMODO SSL DSV
  location ~* ^/\.well-known/pki-validation/(.+)\.txt$ {
    default_type "text/plain";
  }

  ### Hide /well-known subdirectory and return 404 on all requests.
  location = /.well-known/ {
    return 404;
  }

  gzip on;
  gzip_disable "msie6";

  gzip_comp_level 6;
  gzip_min_length 1100;
  gzip_buffers 16 8k;
  gzip_proxied any;
  gzip_types
    text/plain
    text/css
    text/js
    text/xml
    text/javascript
    application/javascript
    application/x-javascript
    application/json
    application/xml
    application/xml+rss
    image/svg+xml;
  gzip_vary on;

  location /sitemaps/sitemap.xml {
    alias $MAGE_ROOT/sitemaps/sitemap.xml;
  }

  location /googleb8e538b2b4c55a85.html {
      alias $MAGE_ROOT/googleb8e538b2b4c55a85.html;
  }

  # Banned locations (only reached if the earlier PHP entry point regexes don't match)
  location ~* (\.php$|\.phtml$|\.htaccess$|\.git) {
    deny all;
  }
